<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= profileUser.nickname || profileUser.email %>'s Profile</title>
    <!-- Include Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            color: #333;
        }
        h1, h2, h3 {
            color: #222;
            margin-bottom: 15px;
        }
        .profile-section {
            background-color: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            width: 100%;
            max-width: 600px;
            text-align: center;
        }
        .profile-pic-large {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #007bff;
            margin-bottom: 20px;
        }
        .profile-info h2 {
            margin-bottom: 10px;
            font-size: 1.8em;
        }
        .profile-info p {
            color: #555;
            margin-bottom: 20px;
        }
        .profile-form {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #eee;
            display: flex;
            flex-direction: column;
            gap: 15px;
            align-items: center;
        }
        .profile-form input[type="text"],
        .profile-form input[type="file"] {
            width: calc(100% - 20px);
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1em;
        }
        .profile-form button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1em;
            transition: background-color 0.2s ease;
        }
        .profile-form button:hover {
            background-color: #0056b3;
        }
        .post-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
            gap: 15px;
            width: 100%;
            max-width: 900px;
        }
        .post-grid-item {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            overflow: hidden;
            text-align: center;
        }
        .post-grid-item img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            display: block;
        }
        .post-grid-item .caption-preview {
            padding: 10px;
            font-size: 0.85em;
            color: #555;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .back-link {
            margin-top: 30px;
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }
        .back-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

<div class="profile-section">
    <img src="<%= profileUser.profilePic.startsWith('/') ? profileUser.profilePic : '/uploads/profile_pics/' + profileUser.profilePic %>" 
         alt="Profile Picture" class="profile-pic-large" onerror="this.src='/default_profile.jpg'">
    <div class="profile-info">
        <h2><%= profileUser.nickname || profileUser.email %></h2>
        <p><%= profileUser.email %></p>
    </div>

    <% if (isCurrentUser) { %>
        <h3>Update Profile</h3>
        <div class="profile-form">
            <h4>Change Nickname</h4>
            <form action="/profile/update-nickname" method="POST">
                <input type="text" name="nickname" value="<%= profileUser.nickname || '' %>" placeholder="Enter new nickname" required>
                <button type="submit">Update Nickname</button>
            </form>

            <h4>Change Profile Picture</h4>
            <form action="/profile/update-profile-pic" method="POST" enctype="multipart/form-data">
                <input type="file" name="profilePic" accept="image/*" required>
                <button type="submit">Update Profile Picture</button>
            </form>
        </div>
    <% } %>
</div>

<h2><%= isCurrentUser ? 'Your' : (profileUser.nickname || profileUser.email) + "'s" %> Posts</h2>

<% if (posts && posts.length > 0) { %>
    <div class="post-grid">
        <% posts.forEach(post => { %>
            <div class="post-grid-item">
                <img src="/uploads/<%= post.image %>" alt="post">
                <div class="caption-preview">
                    <%= post.caption %>
                </div>
            </div>
        <% }) %>
    </div>
<% } else { %>
    <p><%= isCurrentUser ? 'You haven\'t' : (profileUser.nickname || profileUser.email) + ' hasn\'t' %> posted anything yet.</p>
<% } %>

<a href="/home" class="back-link">Back to Home</a>

</body>
</html>
